<% region = Region.find_by("id" => params["id"]) %>

<h1>Edit Region <%= region["Name"] %></h1>

<%= form_tag "/region/#{region["id"]}", "method" => "patch" %>

  <p>
    <%= label_tag "Name", "What is the correct Region name?" %>
    <%= text_field_tag "Name", region["Name"] %>
  </p>

<p>
    <p>
    <label>Do you have a link to a photo?</label>
    <input type="text" name="url" value="<%= region["Picture_url"] %>">
  </p>

<%= submit_tag %> or <%= link_to "Cancel", "/" %>

</form>


