<% region = Region.find_by("id" => params["id"]) %>

<h1>Edit Region #<%= region["id"] %></h1>

<!-- This won't work!  It will send a GET request instead. -->
  <form action="/region/<%= region["id"] %>" method="patch">
  <p>
      <label>What is the region name?</label>
      <input type="text" name="id" value="<%= region["Name"] %>">
  </p>

  <p>
      <label>Do you have a link to a photo?</label>
      <input type="text" name="id" value="<%= region["Picture_url"] %>">
  </p>

  <input type="submit"> or <a href="/region">Cancel</a>

</form>
