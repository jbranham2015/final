<% region_id = params["id"] %>
<% regions = Region.read(region_id) %>
<% countries = Country.read("Region_id" => regions["id"]) %>

<p id="text">
        Explore Trips By Region
    </p>

<ul>
<% countries.each do |run| %>
    <h2> <%= link_to run["Name"], "/country/#{run["id"]}" %> </h2>
      <%=link_to image_tag(run["Picture_url"]), "/country/#{run["id"]}" %>

<hr>
<% end %>
</ul>






