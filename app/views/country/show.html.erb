<p id="text">
        Pick Your Next Trip
</p>

<% country_id = params["id"] %>
<% countries = Country.read(country_id) %>
<% trips = Trip.read("Country_id" => countries["id"]) %>


<ul>

  <% trips.each do |run| %>


       <h2>  <%= link_to run["Name"], "/trip/#{run["id"]}" %> </h2>

        <p> <%= run["Description"] %> </p>
      <%=link_to image_tag(run["Picture_url"]), "/trip/#{run["id"]}" %>
       <%= image_tag(run["Budget_url"]) %>
        <%= image_tag(run["Priority_url"]) %>
         <%= image_tag(run["Itinerary_url"]) %>

  <% end %>
</ul>

