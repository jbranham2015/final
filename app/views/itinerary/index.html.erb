<div class="page-header">
  <h1>  <i class="fa fa-calendar"> </i> View all itineraries <small> (Sorted by country) </small></h1>
</div>

  <% itinerary = Itinerary.read %>
  <button type="button" class="btn btn-primary btn-lg btn-block disabled">
     <span class="glyphicon glyphicon-plane"> </span> Itinerary </button>
       <% itinerary.each do |run| %>
          <% if run["Day"] ==1 %>
          <h2> <%= run["Name"] %> </h2>
          <%= image_tag(run["Itinerary_url"], "class" => "itinerary_banner") %>
  <% end %>

  <div class="row">

      <ul class="list-group">
       <li class="list-group-item list-group-item-info"> <strong> Day </strong> <%= run["Day"] %></li>
       <li class="list-group-item"> <strong> City </strong> <%= run["City"] %> </li>
       <li class="list-group-item"> <strong> Activities </strong> <%= run["Activity"] %> </li>
       <li class="list-group-item"> <strong> Hotel </strong> <%= run["Hotel"] %></li>
       <li class="list-group-item"> <strong> Transporation </strong> <%= run["Transportation"] %></li>
  </div>
  <hr>
 </ul>
<% end %>


<h3> <span class="label label-danger"> Check back for new Itineraries every Sunday! </span> </h3>
